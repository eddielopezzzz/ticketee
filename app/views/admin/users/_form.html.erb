<%= form_for [:admin, @user] do |f| %>
<%= f.error_messages %>
<p>
	<%= f.label :email%>
	<%= f.text_field :email, :placeholder => "Email"%>
</p>

<p>
	<%= f.label :password %>
	<%= f.password_field :password, :placeholder => "password" %>
</p>
<p>
	<%= f.check_box :admin %>
	<%= f.label :admin, "Is an admin?"%>
</p>
<%= f.submit %>
<% end %>
